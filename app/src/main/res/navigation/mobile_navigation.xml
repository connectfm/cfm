<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/navigation_home">

  <fragment
    android:id="@+id/navigation_home"
    android:label="@string/title_home"
    android:name="ui.home.HomeFragment"
    tools:layout="@layout/fragment_home" />

  <fragment
    android:id="@+id/navigation_dashboard"
    android:label="@string/title_dashboard"
    android:name="ui.dashboard.DashboardFragment"
    tools:layout="@layout/fragment_dashboard" />

  <fragment
    android:id="@+id/navigation_notifications"
    android:label="@string/title_notifications"
    android:name="ui.notifications.PlaylistFragment"
    tools:layout="@layout/fragment_notifications" />

  <fragment
    android:id="@+id/song_dashboard"
    android:label="Playback"
    android:name="ui.playback.SongFragment"
    tools:layout="@layout/fragment_song" />

  <fragment
      android:id="@+id/navigation_settings"
      android:label="Settings"
      android:name="ui.settings.SettingsFragment"
      tools:layout="@layout/fragment_settings" />

</navigation>